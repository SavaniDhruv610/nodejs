<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
            <h1>Nothing there!</h1>
        <% } else { %>
            <ul class="orders">
                <% orders.forEach(order => { %>
                    <li class="orders__item">
                        <h1>Order - # <%= order._id %></h1>
                        <ul class="orders__products">
                            <% let totalOrderPrice = 0; %>
                            <% order.products.forEach(p => { %>
                                <li class="orders__products-item">
                                    <img src="<%= p.product.imageUrl %> " alt="Product Image">
                                </li>
                                <li class="orders__products-item">
                                    Name: <%= p.product.title %> | 
                                    Quantity: <%= p.quantity %> | 
                                    Price: ₹<%= p.product.price %> | 
                                    Total price per product: ₹<%= p.product.price * p.quantity %>
                                </li>
                                <% totalOrderPrice += p.product.price * p.quantity; %>
                            <% }); %>
                                <li class="orders__products-item">
                                    <strong>Total order price: ₹<%= totalOrderPrice %></strong>
                                </li>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
</body>
</html>
