<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">


</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <img src="<%= p.productId.imageUrl %>" alt="<%= p.productId.title %>">
                        <div class="cart__item-content">
                            <h1>Title: <%= p.productId.title %></h1>
                            <h2>Quantity: <%= p.quantity %></h2>
                            <h2>Price: ₹<%= p.productId.price %></h2>
                        </div>
                        <div class="cart__item-actions">
                        </div>
                    </li>
                <% }); %>
            </ul>
            <div></div>
            <hr>
            <div class="centered">
                <h2>Total Price: ₹<%= totalSum %></h2>
            </div>
            <div class="centered">
                <button id="order-btn" class="btn"> ORDER</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51PVVgIHSPjrJ3mNHzuppgMOQW0ShdvQtDfABDRJ22rVsOj4BB8GzNkthrupiyP60A3pLP6aDerhiSzO1e7csNn2i00NB5vRNcX');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click',function(){
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        })
                    })
                </script>
    </main>
    <%- include('../includes/end.ejs') %>


