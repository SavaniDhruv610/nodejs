<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (products.length > 0) { %>
            <ul class="cart__item-list">
                <% let totalPrice = 0; %>
                <% products.forEach(p => { %>
                    <% const productTotalPrice = p.productId.price * p.quantity; %>
                    <% totalPrice += productTotalPrice; %>
                    <li class="cart__item">
                        <img src="<%= p.productId.imageUrl %>" alt="<%= p.productId.title %>">
                        <div class="cart__item-content">
                            <h1>Title: <%= p.productId.title %></h1>
                            <h2>Quantity: <%= p.quantity %></h2>
                            <h2>Price: ‚Çπ<%= p.productId.price.toFixed(2) %></h2>
                            <h2>Total: ‚Çπ<%= productTotalPrice.toFixed(2) %></h2>
                        </div>
                        <div class="cart__item-actions">
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn" type="submit">RemoveüóëÔ∏è</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
            </ul>
            <hr>
            <div class="centered">
                <h2>Total Price: ‚Çπ<%= totalPrice.toFixed(2) %></h2>
                <a class="btn" href="/checkout">Checkout</a>
            </div>
        <% } else { %>
            <h1>No Products in Cart!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
</body>
</html>
